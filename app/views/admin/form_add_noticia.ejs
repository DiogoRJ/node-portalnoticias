<!DOCTYPE HTML>
<html>
	<head>
		<title>Portal de Notícias</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="css/main.css" />
		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>
	<body class="is-preload">

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Main -->
					<div id="main">
						<div class="inner">

							<!-- Header -->
								<header id="header">
										<a href="/"><img src="images/logo.png" /></a>
									<ul class="icons">
										<li><a href="/form_add_noticia">CADASTRAR NOTÍCIA</a></li>
									</ul>
								</header>


	    <div class="container">
			
			<% if(validacao.length > 0) { %>
				<div class="row">
					<div class="col-md-12">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
								<% for (var i = 0; i < validacao.length; i++) { %>
									<li><%= validacao[i].msg %></li>
								<% } %>
							</ul>
						</div>
					</div>
				</div>
			<% } %>

	    	<div class="row">
	    		<div class="col-md-12">
	    			<form action="/form_add_noticia" method="POST">

						<div class="form-group">
							<p class="pw">Validação</p>
							<label for="for">Chave 256bits:</label>
							<input type="text" class="form-control" id="pw" name="pw" value="5ba9866b3db219ddad4bd8b75d1ef825808e2f87d6bd2bbe215dcb9cf3e026be">
							<p class="legenda">Campo obrigatorio!</p>
						</div>
						<br />

						<p class="pw">Dados da Notícia</p>
						<div class="form-group">
							<label for="titulo">Título:</label>
							<input type="text" class="form-control" id="titulo" name="titulo">
							<p class="legenda">Campo obrigatorio!</p>
						</div>

						<div class="form-group">
							<label for="pwd">Resumo:</label>
							<input type="text" class="form-control" id="resumo" name="resumo">
							<p class="legenda">Campo obrigatorio!</p>
						</div>
						
						<div class="form-group">
							<label for="pwd">Autor:</label>
							<input type="text" class="form-control" id="autor" name="autor">
							<p class="legenda">Campo obrigatorio!</p>
						</div>

						<div class="form-group">
							<label for="pwd">Data:</label>
							<input type="date" class="form-control" id="data_noticia" name="data_noticia">
							<p class="legenda">Campo obrigatorio!</p>
						</div>

						<div class="form-group">
							<label for="pwd">Notícia:</label>
							<textarea class="form-control" id="noticia" name="noticia"></textarea>
							<p class="legenda">Campo obrigatorio!</p>
						</div>


						<button type="submit" class="btn btn-default">Cadastrar</button>
						</form>
		    	</div>
	    	</div>
	    </div>



		<!-- Scripts -->
			<script src="js/jquery.min.js"></script>
			<script src="js/browser.min.js"></script>
			<script src="js/breakpoints.min.js"></script>
			<script src="js/util.js"></script>
			<script src="js/main.js"></script>

	</body>
</html>